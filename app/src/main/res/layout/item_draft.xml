<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItemDraftMain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <!--Main Layout containing CardView-->

    <android.support.v7.widget.CardView
        android:id="@+id/cvItemDraft"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/selector_row"

        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <!--Main Linear layout inside CardView-->

        <TextView
            android:id="@+id/tvDraftName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"/>

        <CheckBox
            android:id="@+id/cbDraft"
            android:layout_width="wrap_content"
            android:buttonTint="@color/colorBackground"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tvDraftMsg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvDrafttag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:text="Draft"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>