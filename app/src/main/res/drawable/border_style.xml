<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/colorBackground">
            </solid>

            <corners
                android:radius="20dp">
            </corners>

            <stroke
                android:width="2dp"
                android:color="@color/borderColor">
            </stroke>
            <padding
                android:left="15dp"
                android:bottom="5dp"
                android:right="15dp"
                android:top="5dp">

            </padding>

        </shape>
    </item>
</selector>